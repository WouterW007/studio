rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Authenticated users can read their own document.
    // - Authenticated users can create their own document (registration).
    // - Authenticated users can update their own document.
    // - Admins can read and write all user documents.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Only admins can delete users
    }

    // Groups collection (for accepted groups):
    // - Authenticated users can read accepted group documents (application will filter by status).
    // - Admins can read, update, and delete any group document.
    match /groups/{groupId} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Allow admins to list all groups
      allow read: if request.auth != null; // Allow authenticated users to read individual groups
      // create is not allowed directly into groups, only via admin approval process
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Pending Groups collection:
    // - ANY user (authenticated or not) can create pending group documents.
    // - Admins can read, list, update, and delete pending group documents.
    match /pendingGroups/{pendingGroupId} {
      allow create: if true;
      allow read, list, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Announcements collection:
    // - Authenticated users can read announcement documents.
    // - Admins can create, update, and delete announcement documents.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default rule: Deny access to all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}